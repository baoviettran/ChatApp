@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en" style="height:100%">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ChatApp - Register</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css">*@
    <style>
        * {
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body style="height:100%">
    <div class="" style="background-color: #342742; height: 100%; position: relative;">
        <div class="col col-6 " style="background-color: #ffffff; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); border-radius: 10px">
            @*<form asp-controller="Account" asp-action="Login">
                    <input type="text" name="username" placeholder="Username">
                    <input type="password" name="password" placeholder="Password">
                    <button type="submit">Submit</button>
                </form>*@

            <form asp-controller="Account" asp-action="Regiter" class="was-validated" style="padding: 50px 50px 10px 50px">
                <h2>Register</h2>
                <div class="form-group">
                    <label for="uname">Username:</label>
                    <input type="text" class="form-control" id="uname" placeholder="Enter username" name="username" required>
                    <div class="valid-feedback">OK</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="password" required>
                    <div class="valid-feedback">OK</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary" style="min-width:100px">Register</button>

                </div>
            </form>
            @*<div class="d-flex justify-content-center mb-4"><button class="btn btn-secondary" style="min-width:100px" asp-controller="Account" asp-action="Register">Register</button></div>*@
        </div>
    </div>

    @section Scripts {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    }
    <script src="~/js/site.js"></script>

</body>
</html>