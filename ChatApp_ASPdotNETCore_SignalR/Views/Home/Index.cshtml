@model IEnumerable<Chat>
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-7">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Danh sách room chat</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tên room</th>
                                <th>Số lượng thành viên</th>
                                <th>Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var chat in Model)
                            {
                                if (@chat.Type != ChatType.Private)
                                {
                                    <tr>
                                        <td>@chat.Id</td>
                                        <td>@chat.Name</td>
                                        <td></td>
                                        <td>
                                            <a type="button" class="btn btn-outline-primary" asp-controller="Home" asp-action="JoinRoom" asp-route-id="@chat.Id">
                                                Tham gia
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
        <div class="col-md-5 border">
            <div class="p-3">
                <form onsubmit="UpdateUser(event)" asp-controller="Home" asp-action="updateUser">
                    <div class="row">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img class="rounded-circle" width="75px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                            <span class="font-weight-bold">@ViewData["nameUser"]</span><span class="text-black-50">null</span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3 mt-3">
                        <h4 class="text-right">Thông tin chi tiết</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Họ và tên</label><input type="text" class="form-control" name="firstName" value="@ViewData["firstName"]" placeholder="first name"></div>
                        <div class="col-md-6"><label class="labels">Tên</label><input type="text" class="form-control" name="lastname" value="@ViewData["lastName"]" placeholder="lastName"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Số điện thoại</label><input type="text" class="form-control" name="phone" value="@ViewData["phone"]" placeholder="phone ..."></div>
                        <div class="col-md-12"><label class="labels">Địa Chỉ</label><input type="text" class="form-control" name="address" value="@ViewData["address"]" placeholder="address ..."></div>
                        <div class="col-md-12"><label class="labels">Email</label><input type="text" class="form-control" name="email" value="@ViewData["Email"]" placeholder="email ..."></div>
                    </div>
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Cập nhật</button></div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal" tabindex="-1" role="dialog" id="noti">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

@section scriptsIndex {
<script src="~/js/signalr.min.js"></script>
<script src="~/js/messageBuilder.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
    var UpdateUser = function (event) {
        event.preventDefault();
        console.log("aaaaaaaaaaaaaa")
        var data = new FormData(event.target);
          console.log("aaaaaaaaaaaaaa",event.target)
        axios.post('/Home/updateUser', data)
            .then(res => {
                console.log("Message Sent!")
                $('#noti').modal('show')
            })
            .catch(err => {
                console.log("Failed to send message!")
            })
    }

</script>
}
@section nameUser {
        @ViewData["nameUser"]
}